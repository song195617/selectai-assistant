{
  "manifest_version": 3,
  "name": "SelectAI Assistant",
  "version": "1.0",
  "description": "AI 助手：支持翻译、对话、公式渲染与流式响应。",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/marked.umd.min.js",
        "lib/purify.min.js",
        "lib/katex.min.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.css", "lib/katex.min.css", "lib/fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
